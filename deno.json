{
    "nodeModulesDir": "auto",
    "tasks": {
      "clean": "rm -rf dist",
      "dev": "vite --host --port 17027 --force --clearScreen -d",
      "build": "vite build -d --sourcemap",
      "preview": "vite preview -d",
      "optimize": "vite optimize -d",
      "lint": "eslint .",
      "all": "pnpm clean; pnpm run build; pnpm run optimize"
    },
    "developer": "Vedansh",
    "fmt": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": false,
        "singleQuote": true,
        "proseWrap": "preserve",
        "include": ["src/**"],
        "exclude": ["node_modules/**", "dist/**"]
    }
}